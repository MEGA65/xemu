# GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
# along with this program; if not, write to the Free Software
# Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA

SDL2_CONFIG_NATIVE="sdl2-config"
SDL2_CONFIG_OSX="sdl2-config"
SDL2_CONFIG_WIN32="i686-w64-mingw32-sdl2-config"
SDL2_CONFIG_WIN64="x86_64-w64-mingw32-sdl2-config"
SDL2_DLL_RELPATH="bin/SDL2.dll"
PKG_CONFIG="pkg-config"

export SDL2_CONFIG_NATIVE SDL2_CONFIG_OSX SDL2_CONFIG_WIN32 SDL2_CONFIG_WIN64 SDL2_DLL_RELPATH PKG_CONFIG

cd `dirname $0` || exit 1
grep -E '^'$1'#('$2')#'$3'#' system-config-settings.txt | cut -d'#' -f4- | bash

exit 0
